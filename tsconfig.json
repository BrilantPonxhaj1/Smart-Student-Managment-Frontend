{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "module": "ES2022",
    "moduleResolution": "Node",
    "paths": {
      "@/*": [
        "./resources/js/*"
      ],
      "ziggy-js": [
        "./vendor/tightenco/ziggy/dist"
      ]
    },
    "types": [
      "vite/client",
      "vue/tsx",
      "./resources/js/types",
      "./node_modules/ziggy-js"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.d.ts",
    "resources/js/**/*.tsx",
    "resources/js/**/*.vue"
  ]
}
