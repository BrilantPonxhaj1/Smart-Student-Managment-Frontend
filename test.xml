<!ELEMENT emails(email+)>
<!ELEMENT email (from, to+, cc*, bcc*, subject?, message?)>
<!ELEMENT from (#PCDATA)>
<!ELEMENT to (#PCDATA)>
<!ELEMENT cc (#PCDATA)>
<!ELEMENT bcc (#PCDATA)>
<!ELEMENT subject (#PCDATA)>
<!ELEMENT message (#PCDATA)>
<! ATTLIST message
    sent_at CDATA #REQUIRED
    attached (yes|no) #IMPLIED
    emoji CDATA #IMPLIED >



<!ELEMENT database (books,authors) >
<!ELEMENT books (book+)>
<!ELEMENT book (title,author)>
<!ATTLIST book 
    id CDATA #REQUIRED
    genre CDATA #REQUIRED
    published CDATA #REQUIRED
    >
<!ELEMENT title (#PCDATA)>
<!ELEMENT author EMPTY>
<!ATTLIST author 
    idref CDATA #REQUIRED>

<!ELEMENT authors (author+)>
<!ELEMENT author (firstname,lastname)>
<!ATTLIST author
    id cdata #required>
<!ELEMENT firstname (#PCDATA)>
<!ELEMENT lastname (#PCDATA)>




<!-- 
    + osht per 1+ element
    * osht per 0+ element
    ? osht per 0-1 element
    asnje eshte saktesisht 1 element

 -->
<!ELEMENT customers (customer+)>
<!ELEMENT customer (personalinfo, accounts)>
<!ATTLIST customer
    id CDATA #REQUIRED >
<!ELEMENT personalinfo(firstname, lastname,gender,birthday)>
<!ELEMENT firstname (#PCDATA)>
<!ELEMENT lastname (#PCDATA)>
<!ELEMENT gender (#PCDATA)>
<!ELEMENT birthday (#PCDATA)>
<!ELEMENT accounts (account+)>
<!ELEMENT account(balance, transactions)>
<!ATTLIST account
    id CDATA #REQUIRED
    type (savings|checking) #REQUIRED >
<!ELEMENT balance (#PCDATA)>
<!ATTLIST balance
    currency CDATA #REQUIRED >
<!ELEMENT transactions (transaction+)>
<!ELEMENT transaction EMPTY>
<!ATTLIST transaction
    id CDATA #required
    date CDATA #REQUIRED
    amount CDATA #REQUIRED
    TYPE (deposit|withdrawal) #REQUIRED
    >



